- @title = "Bem-vindo!"
- @page_class= "view-cause-details type-app"
= javascript_include_tag "jquery"

#motive
  #motive-inner
    = link_to 'Ver todas as causas', root_path
    .row
      .motive-details
        h1 = @motive.description
        .category = @motive.tag

      .motive-aside
        .supporters
          .total
            b = @motive.supports.size
          .info apoiadores desde 23/10/2013

          - if current_user.motives.include? @motive
            p Eu apoio
          - else
            = link_to 'Apoiar', motive_supports_path(@motive), class: 'button block', method: :post
.share
  .share-inner
    .div id ="fb-root"
    = link_to 'Compartilhe esta ideia', '#', :class => "fb_share"
    = facebook_share_once :link => root_url + motive_path(@motive),
      :name => "Minha causa no gota d'Ã¡gua",
      :description => truncate(@motive.description, :length => 100)


      
