- @title = "Bem-vindo!"
- @page_class= "view-cause-details type-app"
= javascript_include_tag "jquery"

#motive
  #motive-inner
    = link_to 'Ver todas as causas', root_path
    .row
      .motive-details
        h1 = @motive.description
        .category = @motive.tag

      .motive-aside
        .supporters
          .total
            b = @motive.supports.size
          .info #{@motive.supports.size == 1 ? 'apoiador' : 'apoiadores'} desde #{l(@motive.created_at.to_date)}
          - if user_signed_in?
            - if current_user.motives.include? @motive
              p Eu apoio
            - else
              = link_to 'Apoiar', motive_supports_path(@motive), class: 'button block', method: :post

